<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/ground"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/blue"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white"
        android:id="@+id/me_fragment_rl"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/dianpu"
            android:layout_margin="5dp"
            android:layout_centerVertical="true"
            android:id="@+id/me_fragment_dianpu"
            />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/me_fragment_name"
            android:text="商户名称："
            android:layout_toRightOf="@+id/me_fragment_dianpu"
            android:layout_alignTop="@+id/me_fragment_dianpu"
            android:layout_marginLeft="6dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/me_fragment_id"
            android:text="商户编号："
            android:layout_toRightOf="@+id/me_fragment_dianpu"
            android:layout_alignBottom="@+id/me_fragment_dianpu"
            android:layout_marginLeft="6dp"
            android:layout_marginBottom="10dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            />

    </RelativeLayout>

    <LinearLayout
        android:background="@color/white"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/setting_ll"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/shezhi"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:textSize="15sp"

            />

    </LinearLayout>

    <LinearLayout
        android:background="@color/white"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/me_fragment_ltquestion"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:src="@mipmap/wenti1"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="常见问题"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:textSize="15sp"

            />

    </LinearLayout>

    <LinearLayout
        android:background="@color/white"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/me_fragment_ltabout"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/women"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关于我们"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:textSize="15sp"

            />

    </LinearLayout>

    <LinearLayout
        android:background="@color/white"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/leading_ll"
        android:visibility="gone"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/women"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="视频教程"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:textSize="15sp"

            />

    </LinearLayout>
</LinearLayout>
