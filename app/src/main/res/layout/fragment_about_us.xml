<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/ground1"
 >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/blue"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关于我们"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:layout_centerInParent="true"
            />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:id="@+id/back6"
            />
    </RelativeLayout>

    <ImageView
        android:layout_marginTop="90dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/miaodaoshoukuan" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="秒到收款"
        android:textSize="15sp"
        android:layout_marginTop="15dp"
        android:textColor="#000000"/>

    <RelativeLayout
        android:id="@+id/version_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/a100px"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:background="#ffffff"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最新版本"
            android:textColor="#000000"
            android:textSize="@dimen/a30px"
            android:paddingLeft="15dp"/>

        <TextView
            android:id="@+id/version_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="V1.0"
            android:textColor="#1898ed"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/company_website_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/a100px"
        android:layout_marginTop="1dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:textSize="@dimen/a30px"
            android:text="公司网址"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:text="@string/company_website"
            android:textColor="#1898ed" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/company_phone_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/a100px"
        android:orientation="horizontal"
        android:layout_marginTop="1dp"
        android:background="#ffffff"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务电话"
            android:textColor="#000000"
            android:textSize="@dimen/a30px"
            android:paddingLeft="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/company_phone"
            android:textColor="#1898ed"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/disclaimer_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/a100px"
        android:orientation="horizontal"
        android:layout_marginTop="1dp"
        android:background="#ffffff"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="免责申明"
            android:textSize="@dimen/a30px"
            android:textColor="#000000"
            android:paddingLeft="15dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/user_protocol_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/a100px"
        android:orientation="horizontal"
        android:layout_marginTop="1dp"
        android:background="#ffffff"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户协议"
            android:textSize="@dimen/a30px"
            android:textColor="#000000"
            android:paddingLeft="15dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/consumer_protocol_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/a100px"
        android:orientation="horizontal"
        android:layout_marginTop="1dp"
        android:background="#ffffff"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消费者协议"
            android:textSize="@dimen/a30px"
            android:textColor="#000000"
            android:paddingLeft="15dp"/>

    </RelativeLayout>

</LinearLayout>
