<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/ground1"
              android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/blue"
        android:gravity="center"
        android:text="账号注册"
        android:textColor="@color/white"
        android:textSize="17sp"
        />

    <com.zhaoxing.view.sharpview.SharpEditText
        android:id="@+id/user_phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:hint="请输入注册手机号码"
        android:inputType="number"
        android:paddingLeft="10dp"
        app:backgroundColor="@color/white"
        app:border="1dp"
        app:borderColor="@color/line_gray"
        app:radius="3dp"/>

    <com.zhaoxing.view.sharpview.SharpEditText
        android:id="@+id/user_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:gravity="center_vertical"
        android:hint="请输入六位数密码"
        android:paddingLeft="10dp"
        android:password="true"
        app:backgroundColor="@color/white"
        app:border="1dp"
        app:borderColor="@color/line_gray"
        app:radius="3dp"/>

    <com.zhaoxing.view.sharpview.SharpEditText
        android:id="@+id/user_password2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:gravity="center_vertical"
        android:hint="请再次确认注册密码"
        android:paddingLeft="10dp"
        android:password="true"
        app:backgroundColor="@color/white"
        app:border="1dp"
        app:borderColor="@color/line_gray"
        app:radius="3dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp">

        <com.zhaoxing.view.sharpview.SharpEditText
            android:id="@+id/captcha_et3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="图行验证码"
            android:paddingLeft="10dp"
            app:backgroundColor="@color/white"
            app:border="1dp"
            app:borderColor="@color/line_gray"
            app:radius="3dp"/>

        <ImageView
            android:id="@+id/captcha_iv"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:scaleType="fitXY"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp">

        <com.zhaoxing.view.sharpview.SharpEditText
            android:id="@+id/code_et"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="手机验证码"
            android:paddingLeft="10dp"
            app:backgroundColor="@color/white"
            app:border="1dp"
            app:borderColor="@color/line_gray"
            app:radius="3dp"/>

        <com.example.admin.fastpay.view.GetCodeView
            android:id="@+id/get_code_tv"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/white"
            app:backgroundColor="@color/blue"
            app:radius="3dp"/>

    </LinearLayout>

    <com.zhaoxing.view.sharpview.SharpTextView
        android:id="@+id/user_logins"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="注册"
        android:textColor="#ffffff"
        app:backgroundColor="@color/blue"
        app:radius="3dp"/>

</LinearLayout>