<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_margin="15dp">

        <com.zhaoxing.view.sharpview.SharpRelativeLayout
            android:id="@+id/search_srl"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:orientation="horizontal"
            app:radius="15dp"
            android:gravity="center_vertical"
            app:backgroundColor="@color/line_gray">

            <ImageView
                android:id="@+id/search_iv"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/search"/>

            <TextView
                android:id="@+id/title_tv"
                android:enabled="false"
                android:layout_toRightOf="@id/search_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:singleLine="true"
                android:paddingRight="5dp"
                android:ellipsize="end"
                android:gravity="left|center"
                android:background="#00000000"
                android:textColor="@color/text_black"/>

            <com.zhaoxing.view.sharpview.SharpTextView
                android:layout_width="35dp"
                android:layout_height="match_parent"
                app:right_bottom_radius="15dp"
                app:right_top_radius="15dp"
                android:layout_alignParentRight="true"
                app:startBgColor="#afE6E6E6"
                app:endBgColor="#ffE6E6E6"/>

        </com.zhaoxing.view.sharpview.SharpRelativeLayout>

        <TextView
            android:id="@+id/refresh_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:layout_marginLeft="15dp"
            android:textSize="15sp"
            android:text="@string/refresh"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_gray"/>

    <ProgressBar
        android:id="@+id/search_pb"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="3dp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.zengzhaoxing.browser.view.MyWebView
                android:id="@+id/web_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_gray"/>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/back_iv"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:padding="3dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/ahead_iv"
                    android:src="@drawable/back_selector"/>

                <ImageView
                    android:id="@id/ahead_iv"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:padding="3dp"
                    app:layout_constraintLeft_toRightOf="@id/back_iv"
                    app:layout_constraintRight_toLeftOf="@+id/menu_iv"
                    android:src="@drawable/ahead_selector"/>

                <ImageView
                    android:id="@id/menu_iv"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:padding="2dp"
                    app:layout_constraintLeft_toRightOf="@id/ahead_iv"
                    app:layout_constraintRight_toLeftOf="@+id/home_iv"
                    android:src="@drawable/menu_selector"/>

                <ImageView
                    android:id="@id/home_iv"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:padding="2dp"
                    app:layout_constraintLeft_toRightOf="@id/menu_iv"
                    app:layout_constraintRight_toLeftOf="@+id/window_tv"
                    android:src="@drawable/home_selector"/>

               <TextView
                   android:id="@id/window_tv"
                   android:layout_width="20dp"
                   android:layout_height="20dp"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintLeft_toRightOf="@id/home_iv"
                   app:layout_constraintRight_toRightOf="parent"
                   android:textColor="@drawable/window_selector"
                   android:text="5"
                   android:gravity="center"
                   android:textSize="12sp"
                   android:background="@drawable/window_selector2"/>

            </android.support.constraint.ConstraintLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/error_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            android:gravity="center"
            android:visibility="gone"
            android:paddingBottom="50dp">

            <ImageView
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:src="@drawable/signal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加载失败，请检查网络设置"
                android:layout_marginTop="20dp"
                android:textColor="@color/text_black"
                android:textSize="15sp"/>

            <com.zhaoxing.view.sharpview.SharpTextView
                android:id="@+id/reload_tv"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                app:radius="4dp"
                app:border="1dp"
                app:rd_enable="true"
                app:borderColor="@color/blue"
                android:textSize="15sp"
                android:textColor="@color/blue"
                android:text="重新加载"
                android:gravity="center"/>

        </LinearLayout>


    </FrameLayout>



</LinearLayout>